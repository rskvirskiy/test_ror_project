<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :login %>
		<%= f.text_field :login %>

		<%= f.label :fullname %>
		<%= f.text_field :fullname %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :country %>
		<%= f.text_field :country %>

		<%= f.label :state %>
		<%= f.text_field :state %>

		<%= f.label :zip %>
		<%= f.text_field :zip %>

		<%= f.label :city %>
		<%= f.text_field :city %>

		<%= f.label :address %>
		<%= f.text_field :address %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation  %>

		<%= f.submit "Create my account", class: "btn btn-primary btn-large" %>

		<% end %>
	</div>
</div>
