- if signed_in?
  .row
    %aside.span4
      %section
        = render 'shared/user_info'
      %section
        = render 'shared/stats'
      %section
        = render 'shared/micropost_form'
    .span8
      %h3 Micropost feed
      = render 'shared/feed'
- else
  .center.hero-unit
    %h1 Welcome to example of Microblog!
    = link_to "Sign up now!", signup_path, class: "btn btn-largebtn-primary"